<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="poker.controllers.PokerController">
    <!-- Top: Game Info -->
    <top>
        <HBox spacing="20.0" alignment="CENTER">
            <Label text="Current Pot:"/>
            <Label fx:id="potLabel" text="0"/>
            <Label text="Dealer Position:"/>
            <Label fx:id="dealerLabel" text="Player 0"/>
            <Label text="Betting Round:"/>
            <Label fx:id="roundLabel" text="Pre-Flop"/>
        </HBox>
    </top>

    <!-- Center: Community Cards and Players -->
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Community Cards:"/>
                <HBox fx:id="communityCards" spacing="10.0"/>
            </HBox>
            <VBox fx:id="playerDetails" alignment="CENTER" spacing="10.0"/>
        </VBox>
    </center>

    <!-- Bottom: Player Controls -->
    <bottom>
        <HBox spacing="20.0" alignment="CENTER">
            <Button text="Fold" fx:id="foldButton"/>
            <Button text="Call" fx:id="callButton"/>
            <Button text="Raise" fx:id="raiseButton"/>
            <TextField fx:id="raiseAmountField" promptText="Enter raise amount"/>
        </HBox>
    </bottom>

    <!-- Right: AI Adjustments -->
    <right>
        <VBox alignment="CENTER" spacing="20.0">
            <Label text="AI Adjustments"/>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Aggression"/>
                <Slider fx:id="aggressionSlider" min="0" max="100" value="50"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Tightness"/>
                <Slider fx:id="tightnessSlider" min="0" max="100" value="50"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Bluff Frequency"/>
                <Slider fx:id="bluffSlider" min="0" max="100" value="50"/>
            </HBox>
        </VBox>
    </right>
</BorderPane>
