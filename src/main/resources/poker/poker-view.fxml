<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="poker.controllers.PokerController">
    <!-- Top Bar: Game Status -->
    <top>
        <HBox spacing="20.0" alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Label text="Current Pot:"/>
            <Label fx:id="potLabel" text="0"/>
            <Label text="Dealer Position:"/>
            <Label fx:id="dealerLabel" text="0"/>
            <Label text="Betting Round:"/>
            <Label fx:id="roundLabel" text="Pre-Flop"/>
        </HBox>
    </top>

    <!-- Center: Game Table -->
    <center>
        <VBox alignment="CENTER" spacing="20.0">
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Community Cards:"/>
                <HBox fx:id="communityCards" spacing="10.0"/> <!-- Dynamic Card Display -->
            </HBox>
            <VBox fx:id="playerDetails" alignment="CENTER" spacing="10.0"/> <!-- Player Details -->
        </VBox>
    </center>

    <!-- Bottom: Controls -->
    <bottom>
        <HBox spacing="20.0" alignment="CENTER">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Button text="Start Simulation" onAction="#startSimulation"/>
            <Button text="Pause Simulation" onAction="#pauseSimulation"/>
            <Button text="Reset Game" onAction="#resetGame"/>
        </HBox>
    </bottom>

    <!-- Right: AI Adjustments -->
    <right>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Label text="AI Adjustments"/>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Aggression"/>
                <Slider fx:id="aggressionSlider" min="0" max="100" value="50"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Tightness"/>
                <Slider fx:id="tightnessSlider" min="0" max="100" value="50"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Bluff Frequency"/>
                <Slider fx:id="bluffSlider" min="0" max="100" value="50"/>
            </HBox>
        </VBox>
    </right>
</BorderPane>
